<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText1"
        android:layout_toRightOf="@+id/button1"
        android:orientation="vertical" >
        
        <LinearLayout     android:layout_width="400dp"
        android:layout_height="120dp" android:orientation="horizontal" android:layout_marginBottom="50dp" >

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                 android:onClick="moveToDraw"
                 />

	        <ImageView
	        android:id="@+id/image_two"
	        android:layout_width="200dp"
	        android:layout_height="150dp"
	        android:layout_alignBottom="@+id/button1"
	        android:layout_marginRight="60dp"
	        android:layout_toLeftOf="@+id/linearLayout1"
	         android:onClick="moveToDraw"
	         />
        </LinearLayout>
        
          <LinearLayout     android:layout_width="400dp"
        android:layout_height="120dp" android:orientation="horizontal" android:layout_marginBottom="40dp" >
        
	        <ImageView
	        android:id="@+id/image_three"
	        android:layout_width="200dp"
	        android:layout_height="150dp"
	            android:layout_marginRight="10dp"
	        android:layout_alignBottom="@+id/button1"
	        android:layout_toLeftOf="@+id/linearLayout1"
	        android:onClick="moveToDraw"
	         />
	        <ImageView
	        android:id="@+id/image_four"
	        android:layout_width="200dp"
	        android:layout_height="150dp"
	        android:layout_alignBottom="@+id/button1"
	         android:layout_marginRight="30dp"
	        android:layout_toLeftOf="@+id/linearLayout1"
	        android:onClick="moveToDraw"
	         />
        </LinearLayout>
        
        
    </LinearLayout>

    <Button
        android:id="@+id/add_file_button"
        android:layout_width="90dp"
   		 android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/add_question_button"
        android:background="@drawable/blue_button"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="51dp"
        android:text="Add File"
       
         />

    <Button
        android:id="@+id/add_question_button"
        android:layout_width="90dp"
          android:background="@drawable/blue_button"
        android:layout_marginLeft="5dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Add Question"
         />

    <TextView
        android:id="@+id/meeting_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:ems="10"
       
        android:text="Meeting ID:" />

</RelativeLayout>